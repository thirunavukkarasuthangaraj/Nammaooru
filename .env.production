# Production Environment Variables
# Copy to .env on production server

# Database
POSTGRES_DB=shop_management_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# JWT Security
JWT_SECRET=your_very_long_secure_jwt_secret_key_here_minimum_32_characters

# Application
SPRING_PROFILES_ACTIVE=prod

# CORS (restrictive for production)
CORS_ALLOWED_ORIGINS=https://nammaoorudelivary.in,https://www.nammaoorudelivary.in

# File uploads
FILE_UPLOAD_PATH=/opt/app-data/uploads
APP_UPLOAD_DIR=/opt/app-data/uploads