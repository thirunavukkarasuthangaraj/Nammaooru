# Production Environment Variables Template
# Copy this file to .env in your production deployment directory (/opt/shop-management/.env)

# Spring Profile
SPRING_PROFILES_ACTIVE=production

# Database Configuration (REQUIRED)
# Update these with your actual PostgreSQL credentials
DB_URL=jdbc:postgresql://host.docker.internal:5432/shop_management_db
DB_USERNAME=postgres
DB_PASSWORD=your_secure_db_password_here

# JWT Configuration (REQUIRED)
# Generate a secure JWT secret (minimum 32 characters)
# You can use: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_minimum_256_bits_long_secure_random_string

# Email Configuration (REQUIRED for password reset, notifications)
# For Gmail, create an App Password: https://support.google.com/accounts/answer/185833
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password

# Alternative Email Providers:
# For Outlook/Hotmail:
# MAIL_HOST=smtp-mail.outlook.com
# MAIL_PORT=587

# For Yahoo:
# MAIL_HOST=smtp.mail.yahoo.com
# MAIL_PORT=587

# File Storage Configuration
FILE_STORAGE_TYPE=local
FILE_STORAGE_PATH=/var/www/shop-management/uploads
FILE_SERVE_URL=https://nammaoorudelivary.in/uploads

# For S3/DigitalOcean Spaces (optional):
# FILE_STORAGE_TYPE=s3
# S3_ENABLED=true
# S3_ENDPOINT=https://fra1.digitaloceanspaces.com
# S3_REGION=fra1
# S3_BUCKET=your-bucket-name
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key
# S3_PUBLIC_URL=https://your-bucket.fra1.cdn.digitaloceanspaces.com

# CORS Configuration
APP_CORS_ALLOWED_ORIGINS=https://nammaoorudelivary.in,https://www.nammaoorudelivary.in
APP_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
APP_CORS_ALLOWED_HEADERS=*
APP_CORS_ALLOW_CREDENTIALS=true

# Server Configuration (Optional)
SERVER_PORT=8080

# Logging Level (Optional)
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_COM_SHOPMANAGEMENT=INFO